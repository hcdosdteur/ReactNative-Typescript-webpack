{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "checkJs": false,
    // "strict": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@app/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./**/*"]
}
